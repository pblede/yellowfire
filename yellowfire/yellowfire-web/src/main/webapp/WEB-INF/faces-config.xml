	<navigation-rule>
		<from-view-id>/pages/races.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>race</from-outcome>
			<to-view-id>/pages/race</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
    <navigation-rule>
        <from-view-id>/pages/*</from-view-id>
